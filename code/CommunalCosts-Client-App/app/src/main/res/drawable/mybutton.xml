<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="254dp"
    android:layout_height="60dp">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d4804f" />
            <gradient android:angle="-90" android:startColor="#58dfe9" android:endColor="#47a5e9" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#58dfe9" />
            <solid android:color="#58dfe9"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4ec7df" />
            <gradient android:angle="-90" android:startColor="#58dfe9" android:endColor="#47a5e9" />
        </shape>
    </item>
</selector>