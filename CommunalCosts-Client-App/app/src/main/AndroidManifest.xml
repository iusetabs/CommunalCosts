<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jameskealanthirdyearproject.communalcosts_client_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".CreateNewCollectiveActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".CollectiveViewActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".UserSettingsActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".HomeCollectiveView"
            android:label="@string/title_activity_home_collective_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddTransaction" />
        <activity
            android:name=".TransactionView"
            android:label="@string/title_activity_transaction_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CollectiveSettingsActivity"
            android:label="@string/title_activity_collective_settings" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>